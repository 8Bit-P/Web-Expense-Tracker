generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id      String       @id @default(uuid())
  date    DateTime     @default(now())
  concept String       @default("-")
  type    ExpenseType?
  amount  Float        @default(0.0)
}

enum ExpenseType {
  FOOD
  DRINKS
  CASUAL_SHOPPING
  SUPERMARKET
  ONLINE_SHOPPING
  FRIEND_TRANSFER
  BILL
}
